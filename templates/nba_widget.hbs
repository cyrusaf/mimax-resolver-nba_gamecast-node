<style>
  .container {
    background: #e8e8e8;
    display: flex;
    width: 320px;
    justify-content: space-between;
    border: 1px solid #e8e8e8;

    text-decoration: none;
    color: #222;

    font-family: 'Open Sans';
  }

  .team {
    padding-top: 5px;
    padding-left: 5px;
    padding-right: 5px;
    position: relative;
    z-index: 10;
    width: 75px;
  }

  .team .score {
    text-align: center;
    width: 75px;
    font-size: 1em;
    font-weight: 800;
    padding-bottom: 10px;
  }

  .time {
    position: relative;
    z-index: 0;
    background: #f8f8f8;
    width: 150px;
  }

  .time .status {
    width: 150px;
    margin-top: 20px;
    text-align: center;
    font-size: 1.5em;
    font-weight: 400;
  }
</style>

<a class="container" href="{{url}}">

  <div class="team home">
    <img width="75px" src="http://i.cdn.turner.com/nba/nba/.element/img/1.0/teamsites/logos/teamlogos_500x500/{{home.abr}}.png">
    {{#if home.show_score}}<div class="score">{{home.score}}</div>{{/if}}
  </div>

  <div class="time">
    <div class="status">{{period_status}}</div>
    <div class="game_clock">{{game_clock}}</div>
    <div class="period_num">{{period_num}}</div>
  </div>

  <div class="team away">
    <img width="75px" src="http://i.cdn.turner.com/nba/nba/.element/img/1.0/teamsites/logos/teamlogos_500x500/{{away.abr}}.png">
    {{#if away.show_score}}<div class="score">{{away.score}}</div>{{/if}}
  </div>

</a>
