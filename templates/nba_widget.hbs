<style>
  .container {
    background: #ccc;
    display: flex;
    width: 400px;
    justify-content: space-between;

    font-family: 'Open Sans';
  }

  .team {
    width: 100px;
  }

  .team .score {
    text-align: center;
    width: 100px;
    font-size: 2em;
    font-weight: 800;
    padding-bottom: 10px;
  }

  .time {
    background: #e8e8e8;
    width: 200px;
  }

  .time .status {
    width: 200px;
    margin-top: 20px;
    text-align: center;
    font-size: 1.8em;
    font-weight: 400;
  }
</style>

<div class="container">

  <div class="team home">
    <img width="100px" src="http://i.cdn.turner.com/nba/nba/.element/img/1.0/teamsites/logos/teamlogos_500x500/{{home.abr}}.png">
    <div class="score">{{home.score}}</div>
  </div>

  <div class="time">
    <div class="status">{{period_status}}</div>
    <div class="game_clock">{{game_clock}}</div>
    <div class="period_num">{{period_num}}</div>
  </div>

  <div class="team away">
    <img width="100px" src="http://i.cdn.turner.com/nba/nba/.element/img/1.0/teamsites/logos/teamlogos_500x500/{{away.abr}}.png">
    <div class="score">{{away.score}}</div>
  </div>

</div>
